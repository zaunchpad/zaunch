{
  "name": "zaunchpad-backend",
  "version": "1.0.0",
  "description": "Backend for Zaunchpad - Privacy-first cross-chain token launchpad",
  "main": "index.ts",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "test": "bun run src/tests/*.test.ts",
    "test:watch": "bun run --watch src/tests/*.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@hono/zod-validator": "^0.2.1",
    "@meteora-ag/cp-amm-sdk": "^1.2.6",
    "@meteora-ag/dynamic-bonding-curve-sdk": "^1.4.5",
    "@solana/web3.js": "^1.98.4",
    "@storacha/client": "^1.5.1",
    "bn.js": "^5.2.2",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.0.5",
    "postgres": "^3.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "private": true
}
